    <script type="text/javascript">
function valid1(){
  
  
  let pass=document.getElementById('pass').value.trim();
  let pass2=document.getElementById('pass2').value.trim();







 if(pass.length  <4 ){
    document.getElementById('pass').style.borderBottom = " 2px solid red";
    document.getElementById('s2').style.visibility="visible";
    return false;
}
else if(pass != pass2 ){
    document.getElementById('pass2').style.borderBottom = " 2px solid red";
    document.getElementById('s3').style.visibility="visible";
    return false;
}


        
    

}
    function clickbasic(){
    
    document.getElementById('pass').style.borderColor = "black";
    document.getElementById('pass2').style.borderColor = "black";
    document.getElementById('s2').style.visibility="hidden";
    document.getElementById('s3').style.visibility="hidden";
    
   }   
       
